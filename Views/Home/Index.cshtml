    <div class="hero mdl-typography--text-center">
    <h1>Todo el contenido de Microsoft MVPs</h1>
    <form asp-controller="Entries" asp-action="Busqueda" method="get" asp-antiforgery="false" asp-> 
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" id="q" name="q" />
                    <label class="mdl-textfield__label" for="q"><i class="material-icons">search</i> Quiero encontrar...</label>
                  </div>                 
        </form>
       </div>   

<div class="container">
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--8-col mdl-cell--4-col-tablet mdl-cell--4-col-phone">
            <h4>Publicaciones recientes</h4>
            <div class="mdl-grid">               
                @foreach (var entry in Model.UltimasPublicaciones)
                {
                    <div class="mdl-cell mdl-cell--6-col mdl-cell--8-tablet mdl-cell--4-phone">
                        @Html.DisplayFor(model => entry)
                    </div>
                }
            </div>
            <div class="clearfix"></div>
            <a href="@Url.Action("Publicaciones","Entries")"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect next paginate">
                TODAS LAS PUBLICACIONES
            </button></a>
        </div>
        <div class="mdl-cell mdl-cell--4-col">
            <h4>Videos recientes</h4>
            <div class="mdl-grid">
            @foreach (var entry in Model.UltimosVideos)
            {
                <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
                    @Html.DisplayFor(model => entry)
                </div>
            }
            </div>
            <div class="clearfix"></div>
            <a href="@Url.Action("Videos","Entries")"><button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect next paginate">
                TODOS LOS VIDEOS
            </button></a>
        </div>
</div>
</div>
