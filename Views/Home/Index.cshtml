@model MVPStream.Models.HomeViewModel
@{
    ViewBag.Title = "MVPStream - Publicaciones de los más destacados Microsoft MVP";
}
@section meta{
    <meta name="og:image" content="@Url.Content("~/Content/images/MVPHorizontal.png")" />
    <meta name="description" content="MVPStream - Publicaciones de los más destacados Microsoft MVP" />
    <meta name="msvalidate.01" content="4D8ADD01A9B96FAD01A36E11EC156579" />
    <meta name='yandex-verification' content='671406c42972d0e0' />
